{
  "env": {
    "node": true
  },
  "extends": ["prettier","airbnb-base"],
  "plugins": ["promise", "prettier"],
  "rules": {
    "indent": ["error", "tab"],
    "no-tabs": 0,
    "comma-dangle": ["error", "never"],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }],
    "prettier/prettier": ["error", {"singleQuote": true, "useTabs": true}],
    "space-before-function-paren": ["error", {
      "anonymous": "never",
      "named": "always",
      "asyncArrow": "always"
  }]
  }
}